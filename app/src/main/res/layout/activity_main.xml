<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.soumit.materialcardview.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview1_id"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/colorCardBackground"
                app:contentPadding="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/newyork"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview2_id"
                android:layout_below="@id/cardview1_id"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/colorCardBackground"
                app:contentPadding="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/timessquare"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
